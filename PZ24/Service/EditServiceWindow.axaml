<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="PZ24.Service.EditServiceWindow"
        Title="EditServiceWindow">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Статус" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <ComboBox Width="150" Name="StatusCmb"/>
        <TextBlock Text="Сотрудник" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <ComboBox Width="150" Name="EmployeeCmb"/>
        <Button Name="EditBtn" Content="Сохранить" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="Lavender" Margin="0 5 0 0" Click="EditBtn_OnClick"/>
    </StackPanel>
    </Window>
