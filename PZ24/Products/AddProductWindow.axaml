<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="PZ24.Products.AddProductWindow"
        Title="AddProductWindow">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Название" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <TextBox Width="150" Name="NameTxt"/>
        <TextBlock Text="Описание" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <TextBox Width="150" Name="DescTxt"/>
        <TextBlock Text="Цена" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <TextBox Width="150" Name="PriceTxt"/>
        <TextBlock Text="Категория" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <ComboBox Width="150" Name="CategoryCmb"/>
        <Button Name="AddBtn" Content="Добавить" Background="Lavender" HorizontalAlignment="Center" Margin="0 5 0 0" Click="AddBtn_OnClick" />
    </StackPanel>
</Window>
