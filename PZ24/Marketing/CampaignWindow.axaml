<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PZ24.Marketing.CampaignWindow">
    <Grid>
        <DataGrid Name="CampaignGrid" x:CompileBindings="False" VerticalAlignment="Top" HorizontalAlignment="Center" BorderBrush="LightSteelBlue" BorderThickness="5" Margin="0 30 0 0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"  Binding="{Binding CampaignID}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Цель" Binding="{Binding Goal}"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate}"/>
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
